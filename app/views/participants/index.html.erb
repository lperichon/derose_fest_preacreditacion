<table id="participants" class="table table-responsive">
  <thead>
  <tr>
    <th>Nombre</th>
    <th>Apellido</th>
    <th>Documento</th>
    <th>Email</th>
    <th>Escuela</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <%- @participants.each do |participant| -%>
    <tr>
      <td><%= participant.first_name %></td>
      <td><%= participant.last_name %></td>
      <td><%= participant.identification %></td>
      <td><%= participant.email %></td>
      <td><%= participant.account.name %></td>
      <td>
        <%= link_to "Eliminar",
                      participant_path(participant),
                      method: :delete,
                      confirm: "Seguro que desea eliminar este elemento?",
                      class: 'btn btn-mini btn-danger' %>
      </td>
    </tr>
  <%- end -%>
  </tbody>
</table>
